      <script type="text/javascript">
         jQuery("document").ready(function($){
         
         	var nav = $('.topnav');
         
         	$(window).scroll(function () {
         		if ($(this).scrollTop() > 100) {
         			nav.addClass("f-nav");
         		} else {
         			nav.removeClass("f-nav");
         		}
         	});
         
         });
           
      </script>
